[{cmdab:ep:an} | {cmdab:gau:ss}]
[{cmdab:sc:ott} | {cmdab:ha:rdle} | {cmdab:si:lver}] 
{cmdab:mb:andw}{cmd:(}{it:#}{cmd:)}
{cmd:n(}{it:#}{cmd:)} {cmdab:bs:repl(}{it:#}{cmd:)}
{cmdab:se:ed(}{it:#}{cmd:)}
